{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tips": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "id": {
            "type": "number",
            "description": "Stable numeric identifier for the tip (1-based). Optional for backward compatibility but recommended."
          },
          "title": {
            "type": "string",
            "description": "The title of the tip"
          },
          "content": {
            "type": "string",
            "description": "The tip content in markdown format. Use {shortcut} placeholder for OS-specific shortcuts."
          },
          "shortcuts": {
            "type": "object",
            "description": "OS-specific keyboard shortcuts",
            "required": ["default"],
            "properties": {
              "default": {
                "type": "string",
                "description": "Default shortcut for Windows/Linux"
              },
              "macOS": {
                "type": "string",
                "description": "macOS-specific shortcut"
              },
              "windows": {
                "type": "string",
                "description": "Windows-specific shortcut"
              },
              "linux": {
                "type": "string",
                "description": "Linux-specific shortcut"
              }
            }
          }
        }
      }
    }
  },
  "required": ["tips"]
}
